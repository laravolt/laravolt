{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PHPStan: Analyse",
            "type": "shell",
            "command": "composer",
            "args": ["phpstan"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "phpstan",
                "fileLocation": "absolute",
                "pattern": [
                    {
                        "regexp": "^\\s*(\\d+)\\s+(.*)$",
                        "line": 1,
                        "message": 2
                    },
                    {
                        "regexp": "^\\s*------ (.+) ------$",
                        "file": 1
                    }
                ]
            }
        },
        {
            "label": "PHPStan: Generate Baseline",
            "type": "shell",
            "command": "composer",
            "args": ["phpstan:baseline"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "PHPStan: Clear Cache",
            "type": "shell",
            "command": "composer",
            "args": ["phpstan:clear"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Code: Analyse All",
            "type": "shell",
            "command": "composer",
            "args": ["code:analyse"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Code: Fix All",
            "type": "shell",
            "command": "composer",
            "args": ["code:fix"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}